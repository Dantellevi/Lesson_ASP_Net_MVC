@model PagedList.IPagedList<SimpleModelMVC.Models.Student>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Список студентов";
}

<h2>ListStudent</h2>

<p>
    @Html.ActionLink("Добавить нового студента", "Create")
    
</p>
@using (Html.BeginForm("ListStudent", "Student", FormMethod.Get))
{
    <p>
        Поиск по имени: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Поиск" />
    </p>
}
<table class="table">
    <tr>
        <th>
           
            Фамилия
        </th>
        <th>
            @Html.ActionLink("Имя", "ListStudent", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Дата регистрации", "ListStudent", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FirstMidName, "Edit", new { id = item.ID }) 
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<br />

Страница @(Model.PageCount<Model.PageNumber?0:Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model,page=>Url.Action("ListStudent",new { page,sortOrder=ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter }))
